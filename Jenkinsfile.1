pipeline {
    agent any
    environment {
        PROJECT_ID = 	'student-project-379814'
        CLUSTER_NAME = 'cluster-1'
        LOCATION = 'us-central1-c'
        CREDENTIALS_ID = 'student-project-379814'
    }
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', credentialsId: 'jenkins', url: 'https://github.com/Zhakyp01/gke.git'
            }
        }
        stage('deploytokubernetes') {
           steps {
              sh 'gcloud container clusters get-credentials cluster-1 --zone us-central1-c --project student-project-379814'
              step([$class: 'KubernetesEngineBuilder', projectId: env.PROJECT_ID, clusterName: env.CLUSTER_NAME, location: env.LOCATION, manifestPattern: 'deployment.yaml', credentialsId: env.CREDENTIALS_ID, verifyDeployments: true])
    
        }
      }
    }
}
